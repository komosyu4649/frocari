---
import Layout from '@layouts/Layout.astro'
import AboutMain from '@components/AboutMain.astro'
import SideBar from '@components/SideBar.astro'

const kvTitleEn = 'about'
const kvTitleJa = 'frocariについて'
const kvProps = { kvTitleEn, kvTitleJa }

const breadcrumbItems = [
  {
    name: 'ホーム',
    href: '/',
  },
  {
    name: 'frocariについて',
    href: '/about/',
  },
]
---

<Layout title="about">
  <main class="container">
    <div class="main">
      <AboutMain kvProps={kvProps} />
    </div>
    <SideBar breadcrumbItems={breadcrumbItems} />
  </main>
</Layout>

<style lang="scss">
  .container {
    display: grid;
    grid-template-columns: 1fr 28rem;
    gap: 7.5rem;
    width: 126.5rem;
    margin: 0 auto;
  }
</style>
