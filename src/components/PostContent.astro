<style lang="scss">
  .container {
    margin-top: 8rem;
    padding: 6rem 5.5rem;
    background-color: var(--color-gray);
    border-radius: 2rem;
    border: 1px solid var(--color-black);
  }
  .header {
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: center;
    gap: 2rem;
    margin-bottom: 5rem;
    padding-bottom: 5rem;
    border-bottom: 1px solid var(--color-black);
  }
  .headerThumbnail {
    width: 18rem;
    height: 18rem;
    border-radius: 4rem;
  }
  .headerContentTitle {
    margin-bottom: 2rem;
    font-size: 2.6rem;
    font-weight: bold;
    line-height: 1.5;
  }
  .headerContentInfo {
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    gap: 2.5rem;
  }
  .headerContentInfoTagList {
    display: flex;
    flex-direction: row;
    gap: 1.5rem;
  }
  .bodyIntro {
    padding: 3rem;
    background-color: var(--color-white);
    border: 1px solid var(--color-black);
    border-radius: 1.5rem;
  }
  .bodyToc {
    margin-top: 3rem;
    padding: 3rem;
    background-color: var(--color-white);
    border: 1px solid var(--color-black);
    border-radius: 1.5rem;
  }
  .bodyTocMain {
    margin: 1.5rem 1.5rem 0;
  }
  .bodyTocMainList {
    display: grid;
    grid-template-columns: auto;
    gap: 1rem;
  }
  .bodyTocMainItem {
    list-style-type: disc;
  }
  .bodyTocMainItemLink {
    font-size: 1.4rem;
  }
  .bodyTocMainItemList {
    display: grid;
    grid-template-columns: auto;
    gap: 0.5rem;
    margin: 0.5rem 1rem 0;
  }
  .bodyTocMainItemItem {
    list-style-type: disc;
  }
  .bodyTocMainItemItemLink {
    font-size: 1.4rem;
  }
  .bodyMain {
    margin-top: 7rem;
    h2,
    h3,
    h4,
    h5,
    h6 {
      margin-bottom: 3rem;
      font-weight: bold;
    }
    h2 {
      font-size: 2.2rem;
    }
    p {
      margin-top: 3rem;
      font-size: 1.6rem;
      line-height: 1.8;
    }
    img {
      width: auto;
      height: auto;
      margin-top: 3rem;
    }
    ul {
      margin: 3rem 1.5rem 0;
      li {
        list-style-type: disc;
      }
    }
    ol {
      margin: 3rem 1.5rem 0;
      li {
        list-style-type: decimal;
      }
    }
    li {
      font-size: 1.6rem;
      line-height: 1.8;
    }
  }
  .bodyProfile {
    margin-top: 5rem;
    padding: 3rem;
    background-color: var(--color-white);
    border: 1px solid var(--color-black);
    border-radius: 1.5rem;
  }
  .bodyProfileEditor {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1.5rem;
  }
  .bodyProfileEditorContent {
    display: inline-grid;
    grid-template-columns: auto;
    gap: 0.5rem;
  }
  .bodyProfileEditorContentRole {
    font-size: 1.2rem;
    opacity: 0.6;
  }
  .bodyProfileEditorContentName {
    font-size: 1.8rem;
    font-family: 'Urbanist', sans-serif;
  }
  .bodyProfileDescription {
    margin-top: 1rem;
  }
</style>
