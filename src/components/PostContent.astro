---

<section class="container">
  <!-- header -->
  <div class="header">
    <!-- thumbnail -->
    <Image
      src={postsContent.thumbnail.src}
      alt={postsContent.thumbnail.altText}
      width={postsContent.thumbnail.width}
      height={postsContent.thumbnail.height}
      class="headerThumbnail"
    />
    <!-- content -->
    <div class="headerContent">
      <!-- title -->
      <h1 class="headerContentTitle">
        {postsContent.title}
      </h1>
      <!-- info -->
      <div class="headerContentInfo">
        <!-- category -->
        <a
          href={`/category/${postsContent.category.slug}/`}
          class="c-text__label headerContentInfoCategory"
          >{postsContent.category.name}</a
        >
        <!-- tag -->
        <div class="headerContentInfoTag">
          <ul class="headerContentInfoTagList">
            {
              postsContent.tag.map((item) => (
                <li class="headerContentInfoTagItem">
                  <a
                    href={`/tag/${item.slug}/`}
                    class="c-text__tag headerContentInfoTagItemLink"
                  >
                    {item.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
        <!-- date -->
        <time
          datetime={postsContent.date}
          class="c-text__time headerContentInfoDate"
        >
          {dayjs(postsContent.date).format('YYYY.MM.DD')}
        </time>
      </div>
    </div>
  </div>
