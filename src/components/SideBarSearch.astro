<div class="container">
  <input type="text" class="input" placeholder="どんな記事をお探しですか？" />
  <button class="button">
    <svg
      width="14"
      height="14"
      viewBox="0 0 14 14"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <circle cx="6" cy="6" r="5.5" fill="#242422" stroke="white"></circle>
      <line x1="9.35355" y1="9.64645" x2="13.3536" y2="13.6464" stroke="white"
      ></line>
    </svg>
  </button>
</div>

<style lang="scss">
  @use '../styles/variable' as var;

  .container {
    position: relative;
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    width: 100%;
    height: 4rem;
    // margin-top: 4rem;
    padding: 0.5rem 0.5rem 0.5rem 1.5rem;
    border: 1px solid var(--color-black);
    border-radius: 2rem;
  }
  .input {
    font-size: 1.2rem;
  }
  .button {
    width: 2.8rem;
    height: 2.8rem;
    background-color: var(--color-black);
    border-radius: 50%;
  }

  @media screen and (max-width: var.$break-point-sp) {
    .container {
      height: 5rem;
      padding: 0.5rem 0.5rem 0.5rem 1.5rem;
      border: 1px solid var(--color-white);
      border-radius: 4rem;
    }
    .input {
      font-size: 1.5rem;
      color: var(--color-white);
    }
    .button {
      width: 3.5rem;
      height: 3.5rem;
      background-color: var(--color-white);
      circle {
        fill: var(--color-white);
        stroke: var(--color-black);
      }
      line {
        stroke: var(--color-black);
      }
    }
  }
</style>
