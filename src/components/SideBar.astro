---
import Breadcrumb from './Breadcrumb.astro'
import SideBarKeywords from './SideBarKeywords.astro'
import SideBarSearch from './SideBarSearch.astro'
import SidebarBanner from './SidebarBanner.astro'

const { breadcrumbItems } = Astro.props
---

<section class="container">
  {breadcrumbItems && <Breadcrumb breadcrumbItems={breadcrumbItems} />}
  <!-- <SideBarSearch /> -->
  <SideBarKeywords />
  <SidebarBanner />
</section>

<style lang="scss">
  @use '../styles/variable' as var;

  .container {
    position: sticky;
    top: 0;
    height: fit-content;
    margin-top: 4rem;
    padding-top: 4rem;
  }

  @media screen and (max-width: var.$break-point-sp) {
    .container {
      display: none;
    }
  }
</style>
