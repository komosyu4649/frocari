---
import { client } from '../lib/newt/client'

const categoryData = await client.getContents({
  appUid: import.meta.env.PUBLIC_NEWT_APP_UID,
  modelUid: import.meta.env.PUBLIC_NEWT_MODEL_CATEGORY,
})
const categoryItems = categoryData.items
---

<header class="container">
  <div class="inner">
    <!-- logo -->
    <!-- <h1 class="logo"> -->
    <a href="/" class="logo">
      <!-- <Image src="/asset/logo.svg" alt="frocari" width="56" height="17" /> -->
      <img
        src="/asset/img/common/logo.svg"
        alt="frocari"
        width="56"
        height="17"
        class="logoInside"
      />
    </a>
    <!-- </h1> -->
    <!-- menu -->
    <nav class="menu">
      <ul class="menuList">
        {
          categoryItems.map((categoryItem) => (
            <li class="menuItem">
              <a href={`/category/${categoryItem.slug}/`} class="menuItemLink">
                {categoryItem.name}
              </a>
            </li>
          ))
        }
        <li class="menuItem">
          <a href="/about/" class="menuItemLink"> frocariについて</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style lang="scss">
  .inner {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .logo {
    display: inline-block;
    padding: 2.5rem;
  }
  .menu {
    width: 100%;
    border-top: 1px solid var(--color-black);
    border-bottom: 1px solid var(--color-black);
  }
  .menuList {
    display: flex;
    flex-direction: row;
    justify-content: center;
  }
  .menuItemLink {
    display: inline-block;
    padding: 2rem;
    font-size: 1.4rem;
    // font-weight: bold;
  }
</style>
