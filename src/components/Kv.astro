---
const { kvProps } = Astro.props
---

<div class="container">
  <h1 class="title">
    <span class="titleEn">{kvProps.kvTitleEn}</span>
    <span class="titleJa">{kvProps.kvTitleJa}</span>
  </h1>
</div>

<style lang="scss">
  @use '../styles/variable' as var;

  .container {
    position: relative;
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    &::before {
      position: absolute;
      bottom: 0;
      left: 0;
      content: '';
      width: 4rem;
      height: 1px;
      background-color: var(--color-text-black);
    }
  }
  .title {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .titleEn {
    font-size: 1.4rem;
    font-family: 'Urbanist', sans-serif;
  }
  .titleJa {
    font-size: 2.6rem;
    font-weight: bold;
  }

  @media screen and (max-width: var.$break-point-sp) {
    .container {
      margin-bottom: 3rem;
      padding-bottom: 1.5rem;
      &::before {
        width: 3rem;
      }
    }
    .title {
      gap: 0.5rem;
    }
    .titleEn {
      font-size: 1.2rem;
    }
    .titleJa {
      // font-size: 1.8rem;
      font-size: 2rem;
    }
  }
</style>
