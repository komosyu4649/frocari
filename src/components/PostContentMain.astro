---
const { props } = Astro.props
---

<article class="postContentMain" set:html={props} />

<style lang="scss" is:global>
  @use '../styles/variable' as var;

  .postContentMain {
    margin-top: 7rem;
    h2,
    h3,
    h4,
    h5,
    h6 {
      margin: 5rem 0 2.5rem;
      font-weight: bold;
    }
    h2 {
      font-size: 2.4rem;
    }
    p {
      margin-bottom: 2.5rem;
      font-size: 1.6rem;
      line-height: 2;
    }
    img {
      width: auto;
      height: auto;
      margin-bottom: 2.5rem;
    }
    ul {
      margin: 0 1.5rem 2.5rem;
      li {
        list-style-type: disc;
      }
    }
    ol {
      margin: 0 1.5rem 2.5rem;
      li {
        list-style-type: decimal;
      }
    }
    li {
      font-size: 1.6rem;
      line-height: 1.8;
    }
  }

  @media screen and (max-width: var.$break-point-sp) {
    .postContentMain {
      margin-top: 4rem;
      h2,
      h3,
      h4,
      h5,
      h6 {
        margin: 3.5rem 0 1.5rem;
      }
      h2 {
        font-size: 2rem;
      }
      p {
        margin-bottom: 1.5rem;
        font-size: 1.4rem;
      }
      img {
        margin-bottom: 1.5rem;
      }
      ul {
        margin: 0 1.5rem 1.5rem;
      }
      ol {
        margin: 0 1.5rem 1.5rem;
      }
      li {
        font-size: 1.4rem;
      }
    }
  }
</style>
